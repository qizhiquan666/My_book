<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/up"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="上一章"
            android:clickable="true"
            android:textStyle="bold"
            android:focusable="true"
            android:layout_weight="1"
            android:gravity="center"/>
        <Spinner
            android:id="@+id/mulu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:spinnerMode="dialog"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/down"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="下一章"
            android:clickable="true"
            android:textStyle="bold"
            android:focusable="true"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:layout_marginLeft="30dp"
            android:text="@string/字体大小"
            android:layout_marginTop="10dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edit2"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:gravity="center"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/_20"
            android:background="@drawable/edit_bg"
            tools:ignore="RtlSymmetry" />
        <Button
            android:id="@+id/set_size"
            android:layout_width="80dp"
            android:layout_height="49dp"
            android:textSize="16.0sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:radius="5dp"
            android:text="@string/but2"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:layout_marginLeft="30dp"
            android:text="字体颜色:"
            android:layout_marginTop="10dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/txt_white"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="49dp"
            android:layout_marginRight="7dp"
            android:text="白色"/>
        <Button
            android:id="@+id/txt_black"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="49dp"
            android:layout_marginRight="7dp"
            android:text="黑色"/>
        <Button
            android:id="@+id/txt_green"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="49dp"
            android:text="绿色"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:layout_marginLeft="30dp"
            android:text="背景颜色:"
            android:layout_marginTop="10dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/background_white"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="49dp"
            android:layout_marginRight="7dp"
            android:text="白色"/>
        <Button
            android:id="@+id/background_black"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="49dp"
            android:layout_marginRight="7dp"
            android:text="黑色"/>
        <Button
            android:id="@+id/background_green"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="49dp"
            android:text="绿色"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <Button
            android:id="@+id/green_pattern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="护眼模式"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/night_pattern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:text="夜间模式"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</LinearLayout>